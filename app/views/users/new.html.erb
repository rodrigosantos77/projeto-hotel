<h1 class="mb-4">Cadastrar Usuário</h1>
<%= form_with model: @user, local: true, class: "needs-validation", novalidate: true do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@user.errors.count, "erro") %> proibiu este usuário de ser salvo:</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nome, "Nome Completo", class: "form-label" %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :username, "Nome de Usuário (para o sistema)", class: "form-label" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cpf, class: "form-label" %>
    <%= form.text_field :cpf, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :rg, class: "form-label" %>
    <%= form.text_field :rg, class: "form-control" %>
  </div>

  <div class="mb-3">
  <%= form.label :address, "Endereço", class: "form-label" %>
  <%= form.text_field :address, class: "form-control" %>
</div>

<div class="mb-3">
  <%= form.label :phone, "Telefone", class: "form-label" %>
  <%= form.telephone_field :phone, class: "form-control" %>
</div>

<div class="mb-3">
  <%= form.label :gender, "Sexo", class: "form-label" %>
  <%= form.select :gender, options_for_select(['Masculino', 'Feminino', 'Outro'], @user.gender), { prompt: 'Selecione o sexo' }, class: "form-select" %>
</div>

<div class="mb-3">
  <%= form.label :password, "Senha", class: "form-label" %>
  <%= form.password_field :password, class: "form-control" %>
</div>

<div class="mb-3">
  <%= form.label :password_confirmation, "Confirmar Senha", class: "form-label" %>
  <%= form.password_field :password_confirmation, class: "form-control" %>
</div>

  <div class="mb-3">
    <%= form.submit "Cadastrar", class: "btn btn-primary" %>
  </div>
<% end %>
