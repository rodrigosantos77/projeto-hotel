<!-- area Contato -->
<main id="contato" class="w-100">
      <div class="container">
            <div class="w-100 title  mb-5 mb-md-5 mb-lg-5 pt-lg-4 pb-lg-0">
                <div class="title">
                <h2 class="text-center text-md-start text-lg-center mb-4">
                Contato
           </h2>
                </div>
                
            </div>

            <!--linha do contato-->
              <div class="row">
                    <div class="col-md-6">
                        <div class="subtitle">
                              <h4 class="#">Você tem alguma pergunta?</h4>
                              <p class="#">Endereço: Av. XVI  - 1290 - Itacoatiara</p>
                              <p class="#">Ligue para nós: (92) 99392-2122</p>
                              <p class="#">Escreva para nós: novohorizontehotel2019@gmail.com</p>  
                        </div>                     
                    </div>
                   
                    <div class="col-md-6 formulario">   
                            <form action="/envia-email" method="POST">
                                  <div class="mb-3">
                                        <div class="controls">
                                                <label for="nome" class="form-label">Nome:</label>
                                                <input type="text" id="nome" class="form-control" name="nome" required>
                                        </div>
                                  </div>

                                  <div class="mb-3">
                                      <div class="controls">
                                          <label for="sobrenome" class="form-label">Sobrenome:</label>
                                          <input type="text" id="sobrenome" class="form-control" name="sobrenome" required>
                                      </div>
                                  </div>    

                                  <div class="mb-3">
                                      <div class="controls">
                                          <label for="email" class="form-label">E-mail:</label>
                                          <input type="email" class="form-control" id="email" name="email" required>
                                      </div>   
                                  </div>

                                  <div class="mb-3">
                                      <div class="controls">
                                            <label for="whatsapp" class="form-label">Whatsapp:</label>
                                            <input type="text" id="whatsapp" class="form-control" name="whatsapp" required>
                                      </div>                                 
                                  </div>

                                  <div class="mb-3">
                                      <div class="controls">
                                            <label for="mensagem" class="form-label">Mensagem:</label>
                                            <textarea class="form-control" id="mensagem" name="mensagem" rows="4" required></textarea>
                                      </div>
                                  </div>
                            <button type="submit" class="btn btn-primary">Enviar</button> 
                            </form>  
                   </div> 
              </div>
      </div>
</main>

