


<div class="container my-5">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= image_path(@quarto.imagem) %>" class="img-fluid rounded shadow" alt="Imagem do quarto">
    </div>
    <div class="col-md-6">
      <h1 class="fw-bold"><%= @quarto.nome %></h1>
      <p class="lead text-muted"><%= @quarto.descricao %></p>
      <p class="fs-4 fw-bold text-success">Pre√ßo: <%= number_to_currency(@quarto.preco) %> por noite</p>
      <div class="mt-3">
        <%= link_to "Reservar", new_reserva_path(quarto_id: @quarto.id), class: "btn btn-lg btn-primary" %>
        <%= link_to "Voltar", quartos_path, class: "btn btn-lg btn-secondary" %>
      </div>
    </div>
  </div>
</div>
