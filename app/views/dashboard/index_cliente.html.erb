
<h1 class="text-center mb-4">Bem-vindo, <%= @user.username %>!</h1>

<div class="d-flex justify-content-between mb-4">
  <%= link_to 'Nova Reserva', new_reserva_path, class: 'btn btn-outline-success' %>
  <%= link_to 'Logout', logout_path, method: :delete, class: 'btn btn-outline-danger' %>
</div>

<% if @reservas.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Quarto</th>
        <th>Data de Entrada</th>
        <th>Data de Saída</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @reservas.each do |reserva| %>
        <tr>
          <td><%= reserva.quarto.numero %></td>
          <td><%= reserva.check_in.strftime('%d/%m/%Y') %></td>
          <td><%= reserva.check_out.strftime('%d/%m/%Y') %></td>
          <td><%= reserva.status || 'Confirmada' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-center">Você ainda não fez nenhuma reserva.</p>
<% end %>
