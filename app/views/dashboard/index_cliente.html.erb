

<div class="dashboard">
  <aside class="sidebar">
    <h2>Olá, <%= current_user.username.split.first.capitalize %>!</h2>
    <div class="separador"></div>
    <nav>
      <ul>   
          <li><i class="icon">🎒</i> Minhas Reservas</li>
          <li>
          <i class="icon">➕</i>
          <%= link_to 'Nova Reserva', new_reserva_path, class: 'text-white', style: 'text-decoration: none;' %>
          </li>
          <li><i class="icon">👤</i> <%= link_to 'Meu Perfil', perfil_path, class: 'text-white', style: 'text-decoration: none;' %></li>
         <li><i class="icon">⏰</i> <%= link_to 'Histórico', historico_path, class: 'text-white', style: 'text-decoration: none;' %></li>
      </ul>
    </nav>
    <%= link_to 'Sair', logout_path, method: :delete, class: 'logout-btn' %>
  </aside>

  <div class="content">
    <h2>Minhas Reservas</h2>
    <% @reservas.each do |reserva| %>
      <div class="reserva">
        <img src="<%= image_path('quartos/quarto-1.jpeg') %>" alt="Imagem do quarto reservado">
        <div class="info">
          <p><strong>Check-in:</strong> <%= reserva.check_in.strftime("%d/%m/%Y") %></p>
          <p><strong>Check-out:</strong> <%= reserva.check_out.strftime("%d/%m/%Y") %></p>
          <p><%= pluralize(reserva.numero_pessoas, "Pessoas") %></p>
        </div>
        <div class="actions">
          <p><%= reserva.status.capitalize %></p>
          <div class="d-flex gap-2">
            <%= link_to "Cancelar", reserva_path(reserva), method: :patch, class: "btn-cancelar" %>
            <%= link_to "Editar", edit_reserva_path(reserva), class: "btn-editar" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
