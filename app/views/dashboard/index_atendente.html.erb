




<div class="d-flex justify-content-end gap-2 mb-3">
  <div class="d-inline-flex">
    <%= link_to new_reserva_path, class: 'btn btn-success d-flex align-items-center px-3 py-2' do %>
      <i class="fa fa-plus-circle me-2"></i>
      <span>Nova Reserva</span>
    <% end %>
  </div>
  <div class="d-inline-flex">
    <%= link_to new_user_path, class: 'btn btn-primary d-flex align-items-center px-3 py-2' do %>
      <i class="fa fa-user-plus me-2"></i>
      <span>Novo Cliente</span>
    <% end %>
  </div>
</div>


<table class="table table-striped table-hover mt-4">
  <thead class="table-dark">
    <tr>
      <th>Quarto</th>
      <th>Check-in</th>
      <th>Check-out</th>
      <th>Status</th>
      <th>Cliente</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.quarto.numero %></td>
        <td><%= reserva.check_in.strftime('%d/%m/%Y') %></td>
        <td><%= reserva.check_out.strftime('%d/%m/%Y') %></td>
        <td><%= reserva.status || 'Confirmada' %></td>
        <td><%= reserva.user.nome %></td>
        <td>
          <%= link_to 'Editar', edit_reserva_path(reserva), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Excluir', reserva, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Tem certeza que deseja excluir esta reserva?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
